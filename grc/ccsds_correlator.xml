<?xml version="1.0"?>
<block>
  <name>Correlator</name>
  <key>ccsds_correlator</key>
  <category>[CCSDS]</category>
  <import>import ccsds</import>
  <make>ccsds.correlator($asm, $asm_mask, $threshold, $frame_len)</make>
  <param>
    <name>ASM</name>
    <key>asm</key>
    <value>0x1acffc1d</value>
    <type>int</type>
  </param>
  <param>
    <name>ASM Mask</name>
    <key>asm_mask</key>
    <value>0xffffffff</value>
    <type>int</type>
  </param>
  <param>
    <name>Threshold Mask</name>
    <key>threshold</key>
    <value>0</value>
    <type>int</type>
  </param>
  <param>
    <name>Frame Length</name>
    <key>frame_len</key>
    <value>223</value>
    <type>int</type>
  </param>
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>
  <source>
    <name>out</name>
    <type>message</type>
  </source>
</block>
